<header data-ng-app="robototes-common" data-ng-controller="commonController" class="container-fluid">
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <!--Mobile Icon-->
                <a class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navlinks">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <%- link_to("\/\/ROBOTOTES", "/", { id: "logo", class: "navbar-brand" }); %>
                <div class="visible-xs btn-group btn-group-justfified text-center pull-right">
                    <% include ./social.ejs %>
                </div>
            </div>
            <div class="collapse navbar-collapse" id="navlinks">
                <ul class="nav navbar-nav">
                    <li class="<%= current.path == "/about" ? "active" : ""; %>"><%- link_to("About" + tag("span", { class: "sr-only" }) + "(current)" + end_tag("span"), "/about"); %></li>
                    <li class="<%= current.path == "/blog" ? "active" : ""; %>"><%- link_to("Blog", "/blog"); %></li>
                    <li class="<%= current.path == "/resources" ? "active" : ""; %>"><%- link_to("Resources", "/resources"); %></li>
                </ul>
                <div class="nav navbar-nav navbar-right">
                    <% include ./social.ejs %>
                </div>
            </div>
        </div>
    </nav>
</header>