header.container-fluid
  nav.navbar.navbar-default.navbar-fixed-top
    div.container-fluid
      div.navbar-header
        a.navbar-toggle.collapsed(data-toggle='collapse' data-target='#navlinks')
          span.sr-only Toggle Navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand#headerTitle(href='/') //ROBOTOTES
        div.visible-xs.btn-group.btn-group-justified.text-center.pull-right.visible-xs
          each account in socialMedia
            a(class=`btn btn-default col-sm-3 fa fa-${account.icon}` href=account.url target='_blank')
              span.sr-only= account.service
      div.collapse.navbar-collapse#navlinks
        //- TODO Add active page detection
        ul.nav.navbar-nav
          li
            a(href='/about') About
          li
            a(href=`//cdn.${process.env.DOMAIN}`) Blog
          li
            a(href='/resources') Resources
        ul.nav.navbar-nav.navbar-right.hidden-xs
          each account in socialMedia
            li
              a(class=`fa fa-${account.icon}` href=account.url target='_blank')
                span.sr-only= account.service