doctype html
html(lang='en')
  head
    include /head
    include /seo
  body.container
    include /header
    section#main
      div#contactUs
        h2 Contact us
        h4 Team emails
        div.row
          each teamEmail in teamEmails
            div.col-md-4.col-sm-6.col-xs-12
              div.panel.panel-default
                div.panel-heading
                  h4.panel-title= `${teamEmail.name}`
                div.panel-body
                  img(src=`//cdn.${process.env.DOMAIN}/media/email_images/${teamEmail.alias}@${teamEmail.domain}.${teamEmail.tld}.png` alt=`${teamEmail.alias} at ${teamEmail.domain} dot ${teamEmail.tld}`)
        h4 Robotics Leadership
        div.row
          each member in teamMembers
            div.col-md-4.col-sm-6.col-xs-12
              div.panel.panel-default
                div.panel-heading
                  h4.panel-title= `${member.name} (${member.role})`
                div.panel-body
                  img(src=`//cdn.${process.env.DOMAIN}/media/email_images/${member.alias}@${member.domain}.${member.tld}.png` alt=`${member.alias} at ${member.domain} dot ${member.tld}`)
        h4 Website developers
        div.row
          each developer in developers
            div.col-md-4.col-sm-6.col-xs-12
              div.panel.panel-default
                div.panel-heading
                  h4.panel-title= `${developer.name}`
                div.panel-body
                  span GitHub: 
                  a(href=`https://github.com/${developer.github}` target='_blank')= `@${developer.github}`
    include /footer