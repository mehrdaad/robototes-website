FROM alpine:3.6

# The version to install
ARG version="v0.12.5"

# Install rancher-compose
RUN wget -O /bin/rancher-compose https://github.com/rancher/rancher-compose/releases/download/$version/rancher-compose-linux-amd64-$version.tar.gz
WORKDIR /workspace

# Image metadata
LABEL name="rancher-compose" version=$version maintainer="webmaster@robototes.com"

ENTRYPOINT [ "rancher-compose" ]
