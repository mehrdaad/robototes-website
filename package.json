{
  "name": "robototes-website",
  "version": "2.0.0-alpha",
  "description": "Official Robototes team website",
  "main": "start.js",
  "repository": "https://github.com/robototes/robototes-website.git",
  "license": "SEE LICENSE IN LICENSE",
  "author": "dannytech <dhellstern@outlook.com>",
  "scripts": {
    "start": "forever start --minUptime 1000 --spinSleepTime 3000 code/server.js",
    "status": "forever list",
    "deploy": "forever restart code/server.js",
    "stop": "forever stop code/server.js",
    "test": "standard && nyc --exclude code/tests/ ava code/tests/index.js # Disabled while waiting for modules to update && nsp check --output checkstyle && retire",
    "coverage": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "dev": "DEBUG=robototes-website:*,http nodemon -e js,json,pug,css code/server.js"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "dotenv-extended": "^2.0.1",
    "forever": "^0.15.3",
    "html-validator": "^2.2.3",
    "js2xmlparser": "^3.0.0",
    "kcors": "^2.2.1",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-cache-control": "^2.0.0",
    "koa-compress": "^2.0.0",
    "koa-favicon": "^2.0.0",
    "koa-helmet": "^3.2.0",
    "koa-minify": "^2.0.0",
    "koa-passport": "^4.0.0",
    "koa-pug": "^3.0.0-2",
    "koa-router": "^7.2.1",
    "koa-session": "^5.5.0",
    "passport-auth0": "^0.6.0",
    "request": "^2.82.0"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "codecov": "^2.3.0",
    "mongo-express": "^0.42.3",
    "nodemon": "^1.11.0",
    "nsp": "^2.6.3",
    "nyc": "^11.1.0",
    "retire": "^1.3.3",
    "standard": "^10.0.2",
    "supertest": "^3.0.0"
  }
}
